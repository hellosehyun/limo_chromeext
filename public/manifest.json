{
  "manifest_version": 3,
  "name": "Limo",
  "version": "0.0.0",
  "description": "Limo",
  "action": {
    "default_popup": "index.html"
  },
  "commands": {
    "createMemo": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Limo"
    }
  },
  "background": {
    "service_worker": "bg.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting", "tabs"]
}
